# General
NODE_ENV=development  # development, production, test
LOG_LEVEL=info        # error, warn, info, debug, trace
PORT=3001             # Local development port for API server
MCP_PORT=3002         # Local development port for MCP server

# LLM Providers (Choose one)
LLM_PROVIDER=openai   # openai, anthropic, custom
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
CUSTOM_LLM_ENDPOINT=https://your-custom-llm-endpoint.com

# LLM Models
CLARIFICATION_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-ada-002
MATCHING_REASONING_MODEL=claude-3-opus-20240229
WORKFLOW_GENERATION_MODEL=claude-3-opus-20240229

# Agent Bus Logic
DISABLE_PROCESSOR_FILTERING=false
DISABLE_MULTI_STEP_WORKFLOW=false
HEALTH_CHECK_TIMEOUT_MS=5000
DEFAULT_MAX_CANDIDATES=5

# Neon Database (PostgreSQL)
NEON_DATABASE_URL=postgres://username:password@your-db-host.neon.tech/agent_bus?sslmode=require

# Upstash Redis
UPSTASH_REDIS_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_TOKEN=your-redis-token
REDIS_TTL_SECONDS=86400


# Pinecone Vector DB
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=agent-bus-processors
PINECONE_NAMESPACE=default

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Backend API (Optional)
BACKEND_API_URL=https://your-backend-api.com
BACKEND_API_KEY=your-backend-api-key

# External Processor Registry (Optional)
PROCESSOR_REGISTRY_URL=https://your-processor-registry.com 